---
import { text } from "../../data/i18n";
import { LogoLoop } from "../LogoLoop";
import LustreText from "../ui/lustretext";

const t = text.skills;

// Languages & Core
const languageLogos = [
  { src: "/icons/languange/Html.png", alt: "HTML5" },
  { src: "/icons/languange/Css-Vanila.png", alt: "CSS3" },
  { src: "/icons/languange/Js.png", alt: "JavaScript" },
  { src: "/icons/languange/Php.png", alt: "PHP" },
  { src: "/icons/languange/mysql.svg", alt: "MySQL" },
];

// Frameworks & Libraries
const frameworkLogos = [
  { src: "/icons/framework/React.svg", alt: "React" },
  { src: "/icons/framework/tailwindcss.svg", alt: "Tailwind CSS" },
  { src: "/icons/framework/Node.js-Logo.png", alt: "Node.js" },
  { src: "/icons/framework/bootsrap.png", alt: "Bootstrap" },
  { src: "/icons/framework/laravel.png", alt: "Laravel" },
  { src: "/icons/framework/typescript-logo.png", alt: "TypeScript" },
];

// Development Tools
const toolLogos = [
  { src: "/icons/tools/git_bash.svg", alt: "Git" },
  { src: "/icons/tools/github.svg", alt: "GitHub" },
  { src: "/icons/tools/vscode.svg", alt: "VS Code" },
  { src: "/icons/tools/Vercel.svg", alt: "Vercel" },
  { src: "/icons/tools/chatgpt.svg", alt: "ChatGPT" },
  { src: "/icons/tools/google.svg", alt: "Google" },
];
---

<section id="skills" class="py-24 bg-[#121212] relative overflow-hidden">
  <div
    class="absolute top-1/4 -right-64 w-96 h-96 bg-[#D4AF37]/5 rounded-full blur-3xl pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-1/4 -left-64 w-96 h-96 bg-[#E5E4E2]/5 rounded-full blur-3xl pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div
      class="flex items-center gap-3 animate-in fade-in slide-in-from-left-4 duration-700 mb-6 justify-center"
    >
      <span class="h-px w-12 bg-[#D4AF37]/60"></span>
      <span
        class="text-[#D4AF37] font-display tracking-[0.2em] text-sm uppercase"
        >Arsitektur & Alat</span
      >
      <span class="h-px w-12 bg-[#D4AF37]/60"></span>
    </div>

    <h2 class="text-center mb-16">
      <LustreText
        client:visible
        text={t.title}
        className="text-4xl md:text-5xl font-display font-bold text-[#E5E4E2]"
      />
    </h2>

    <div class="space-y-16">
      {/* Languages Row */}
      <div class="space-y-6">
        <h3
          class="text-xs md:text-sm font-display text-neutral-500 border-l-2 border-[#D4AF37] pl-4 uppercase tracking-[0.2em] mb-4"
        >
          Logika & Bahasa Utama
        </h3>
        <div class="relative">
          <div
            class="absolute inset-y-0 left-0 w-24 bg-gradient-to-r from-[#121212] via-[#121212]/80 to-transparent z-10 pointer-events-none"
          >
          </div>
          <div
            class="absolute inset-y-0 right-0 w-24 bg-gradient-to-l from-[#121212] via-[#121212]/80 to-transparent z-10 pointer-events-none"
          >
          </div>
          <LogoLoop
            client:visible
            logos={languageLogos}
            speed={45}
            direction="left"
            logoHeight={50}
            gap={80}
            pauseOnHover={true}
            fadeOut={false}
            scaleOnHover={false}
            className="[&_img]:grayscale [&_li:hover_img]:grayscale-0 [&_img]:transition-all [&_img]:duration-500 [&_img]:opacity-80 [&_li:hover_img]:opacity-100"
            ariaLabel="Programming Languages"
          />
        </div>
      </div>

      {/* Frameworks Row */}
      <div class="space-y-6">
        <h3
          class="text-xs md:text-sm font-display text-neutral-500 border-l-2 border-[#D4AF37] pl-4 uppercase tracking-[0.2em] mb-4"
        >
          Framework & Ekosistem
        </h3>
        <div class="relative">
          <div
            class="absolute inset-y-0 left-0 w-24 bg-gradient-to-r from-[#121212] to-transparent z-10 pointer-events-none"
          >
          </div>
          <div
            class="absolute inset-y-0 right-0 w-24 bg-gradient-to-l from-[#121212] to-transparent z-10 pointer-events-none"
          >
          </div>
          <LogoLoop
            client:visible
            logos={frameworkLogos}
            speed={35}
            direction="right"
            logoHeight={55}
            gap={80}
            pauseOnHover={true}
            fadeOut={false}
            scaleOnHover={false}
            className="[&_img]:grayscale [&_li:hover_img]:grayscale-0 [&_img]:transition-all [&_img]:duration-500 [&_img]:opacity-80 [&_li:hover_img]:opacity-100"
            ariaLabel="Frameworks and Libraries"
          />
        </div>
      </div>

      {/* Tools Row */}
      <div class="space-y-6">
        <h3
          class="text-xs md:text-sm font-display text-neutral-500 border-l-2 border-[#D4AF37] pl-4 uppercase tracking-[0.2em] mb-4"
        >
          Alat & Infrastruktur
        </h3>
        <div class="relative">
          <div
            class="absolute inset-y-0 left-0 w-24 bg-gradient-to-r from-[#121212] to-transparent z-10 pointer-events-none"
          >
          </div>
          <div
            class="absolute inset-y-0 right-0 w-24 bg-gradient-to-l from-[#121212] to-transparent z-10 pointer-events-none"
          >
          </div>
          <LogoLoop
            client:visible
            logos={toolLogos}
            speed={40}
            direction="left"
            logoHeight={45}
            gap={80}
            pauseOnHover={true}
            fadeOut={false}
            scaleOnHover={false}
            className="[&_img]:grayscale [&_li:hover_img]:grayscale-0 [&_img]:transition-all [&_img]:duration-500 [&_img]:opacity-80 [&_li:hover_img]:opacity-100"
            ariaLabel="Development Tools"
          />
        </div>
      </div>
    </div>
  </div>
</section>
