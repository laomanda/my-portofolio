<section
    id="skills"
    class="py-20 bg-light-surface dark:bg-dark-surface transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-6">
        <h2
            class="text-3xl md:text-4xl font-serif font-bold text-center mb-12 text-light-textPrimary dark:text-dark-textPrimary"
        >
            {t.title}
        </h2>

        <div class="flex flex-wrap justify-center gap-6 md:gap-8">
            {
                skills.map((skill) => (
                    <div class="px-8 py-4 bg-light-bg dark:bg-dark-bg rounded-lg shadow-sm border border-gray-100 dark:border-gray-800 flex items-center gap-3 hover:shadow-md transition-all cursor-default hover:-translate-y-1 group">
                        <svg
                            class={`w-8 h-8 ${skill.color} group-hover:scale-110 transition-transform`}
                            viewBox={skill.viewBox}
                            fill="currentColor"
                        >
                            <path d={skill.path} />
                        </svg>
                        <span class="font-medium text-light-textPrimary dark:text-dark-textPrimary">
                            {skill.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>
