---
import Aurora from "../Aurora.jsx";
import TextType from "../TextType.jsx";
import LustreText from "../ui/lustretext";
import Lanyard from "../Lanyard";
---

<section
  id="home"
  class="relative min-h-screen w-full flex items-center justify-center overflow-hidden bg-dark-bg"
>
  <!-- Background -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <Aurora
      client:idle
      colorStops={["#000000", "#d4af37", "#e5e4e2"]}
      amplitude={1.2}
      blend={0.4}
    />
  </div>

  <!-- Content Grid -->
  <div
    class="relative z-10 w-full max-w-7xl mx-auto px-4 grid grid-cols-1 lg:grid-cols-2 items-center lg:gap-8 h-full"
  >
    <!-- Left Column: Typography (Order 2 on Mobile, 1 on Desktop) -->
    <div
      class="flex flex-col items-center lg:items-start text-center lg:text-left gap-8 order-2 lg:order-1 pt-64 lg:pt-0"
    >
      <div class="opacity-0 animate-fade-in-up animation-delay-200">
        <LustreText
          client:load
          text="JAKKOB PANJAITAN"
          className="text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-bold font-serif tracking-tighter leading-tight py-4"
          speed={5}
        />
      </div>

      <!-- Decorative Line -->
      <div
        class="w-24 h-[1px] bg-gradient-to-r from-transparent via-dark-accent to-transparent opacity-60 self-center lg:self-start"
      >
      </div>

      <TextType
        client:load
        text={[
          "Frontend Developer",
          "Junior Web Developer",
          "Full-Stack Developer",
          "Crafting Modern & Clean UI",
        ]}
        typingSpeed={75}
        deletingSpeed={50}
        pauseDuration={1500}
        cursorCharacter="_"
        cursorClassName="text-[#D4AF37] ml-1"
        textClassName="bg-clip-text text-transparent bg-gradient-to-r from-[#D4AF37] via-[#F7E3A1] to-[#E5E4E2] drop-shadow-[0_0_15px_rgba(212,175,55,0.6)]"
        className="text-xl md:text-2xl lg:text-3xl uppercase tracking-[0.2em] font-display font-bold"
      />
    </div>
  </div>

  <!-- Right Column: Replaced by Absolute Lanyard Overlay -->
</section>

<!-- Lanyard Overlay (Full Screen) - Closer camera, higher z-index -->
<div
  class="absolute inset-0 h-full z-50 pointer-events-none flex items-center justify-center"
>
  <!-- Mobile Scroll Zones (Left & Right) -->
  <div
    class="absolute inset-y-0 left-0 w-[15%] z-[60] pointer-events-auto lg:hidden"
  >
  </div>
  <div
    class="absolute inset-y-0 right-0 w-[15%] z-[60] pointer-events-auto lg:hidden"
  >
  </div>

  <!-- Lanyard Container -->
  <div class="w-full h-full pointer-events-auto">
    <Lanyard
      client:only="react"
      fov={20}
      position={[0, 0, 15]}
      gravity={[0, -40, 0]}
      groupPosition={[2.5, 4, 0]}
      transparent
    />
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }
  .animation-delay-100 {
    animation-delay: 0.1s;
  }
  .animation-delay-200 {
    animation-delay: 0.3s;
  }
  .animation-delay-300 {
    animation-delay: 0.5s;
  }
  .animation-delay-400 {
    animation-delay: 0.7s;
  }
</style>
